<!DOCTYPE html>
<html>
<head>
    <title>Audit Log</title>
    <style>
        body {
            font-family: Arial;
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            background: #f5f5f5;
            text-align: center;
        }

        h1 {
            font-size: 38px;
            color: #2c3e50;
            margin-bottom: 25px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

        th {
            background: #3498db;
            color: white;
            padding: 15px;
            font-size: 18px;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

        tr:hover {
            background: #ecf0f1;
        }

        .status-success {
            color: #27ae60;
            font-weight: bold;
        }

        .status-fail {
            color: #c0392b;
            font-weight: bold;
        }

        a.back {
            display:inline-block;
            margin-top:25px;
            padding:12px 30px;
            background:#7f8c8d;
            color:white;
            text-decoration:none;
            border-radius:6px;
        }
        a.back:hover {
            background:#95a5a6;
        }

    </style>
</head>

<body>

    <h1>üìä Audit Log</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Status</th>
            <th>Timestamp</th>
        </tr>

        <% logs.forEach(function(log) { %>
            <tr>
                <td><%= log.id %></td>
                <td><%= log.username %></td>
                <td class="<%= log.status === 'success' ? 'status-success' : 'status-fail' %>">
                    <%= log.status %>
                </td>
                <td><%= log.timestamp %></td>
            </tr>
        <% }); %>
    </table>

    <a href="/" class="back">‚Üê Back to Home</a>

</body>
</html>